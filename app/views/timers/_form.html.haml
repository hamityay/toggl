-# frozen_string_literal: true
= simple_form_for(@timer) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :info
    = f.input :start
    = f.input :finish
    = f.association :type
    = f.association :user

  .form-actions
    = f.button :submit
